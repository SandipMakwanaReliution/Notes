<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_partner_form_inherit_for_cm" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.catalogue.management</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='internal_notes']" position="after">
                    <page string="Product Category &amp; Catalogue">
                        <group>
                            <field name="location_id" domain="[('usage', '=', 'internal')]"
                            options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                        </group>
                        <field name="category_ids" widget="many2many_tags"/>
                    </page>
                    <page string="Catalogue Lines">
                        <field name="catalogue_line_ids"/>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>